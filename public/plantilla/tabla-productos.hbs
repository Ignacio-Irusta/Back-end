<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

{{#if productos.length}}
<h2>Lista de Productos</h2>
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: blueviolet;">
            <th>Titulo</th>
            <th>Precio</th>
            <th>URL</th>
        </tr>
        {{#each productos}}
        <tr>
            <td>{{this.Titulo}}</td>
            <td>{{this.Precio}}</td>
            <td>{{this.tumbline}}</td>
        </tr>
        {{/each}}
    </table>
</div>
{{ else }}
<h3 class="alert alert-warning">No hay productos</h3>
{{/if}}